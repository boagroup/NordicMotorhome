<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<!-- Author(s) Octavian Roman -->

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.motorhome.controller.rental.popup.RentalSettingsController">
   <children>
      <HBox alignment="CENTER" prefHeight="40.0" prefWidth="500.0" styleClass="newEntityBar" HBox.hgrow="ALWAYS">
         <children>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="extraNameField" promptText="Extra Name" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <TextField fx:id="extraPriceField" promptText="Price / Day" />
               </children>
            </HBox>
            <HBox fx:id="addExtraButton" alignment="CENTER" prefHeight="100.0" prefWidth="100.0" styleClass="circleButton">
               <children>
                  <ImageView fitHeight="30.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/plus.png" />
                     </image>
                  </ImageView>
               </children>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </HBox>
         </children>
      </HBox>
      <ScrollPane hbarPolicy="NEVER" prefHeight="200.0" styleClass="edge-to-edge" VBox.vgrow="ALWAYS">
         <content>
            <VBox fx:id="extrasContainer" alignment="TOP_CENTER" prefWidth="600.0" spacing="5.0" />
         </content>
      </ScrollPane>
   </children>
</VBox>
