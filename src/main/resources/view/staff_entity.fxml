<HBox fx:id="entityContainer" alignment="CENTER_LEFT" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="80.0" styleClass="entity-container" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.motorhome.controller.Entity.StaffEntityController">
   <children>
      <ImageView fx:id="image" fitHeight="70.0" fitWidth="70.0" pickOnBounds="true" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="nameLabel" styleClass="entity-label-text" text="Staff Name" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="90.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="roleLabel" styleClass="entity-label-text" text="Staff Role" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="290.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="telephoneLabel" styleClass="entity-label-text" text="Staff telephone" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="490.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="genderLabel" styleClass="entity-label-text" text="Staff Gender" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="690.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0" HBox.hgrow="ALWAYS">
         <children>
            <MenuButton mnemonicParsing="false" styleClass="entityOptionsButton" textAlignment="CENTER" textFill="TRANSPARENT">
              <items>
                <MenuItem fx:id="edit" mnemonicParsing="false" text="Edit" />
                <MenuItem fx:id="delete" mnemonicParsing="false" text="Delete" />
              </items>
               <graphic>
                  <ImageView fitHeight="33.0" fitWidth="34.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../assets/options.png" />
                     </image>
                  </ImageView>
               </graphic>
            </MenuButton>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets left="10.0" right="10.0" />
   </padding>
</HBox>
